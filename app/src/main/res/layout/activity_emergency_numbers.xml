<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logozephiro_cuadrado"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Nombre App -->
        <ImageView
            android:id="@+id/nombreApp"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:src="@drawable/zephiro_letra"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/logoHome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Icono Call -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:lottie_rawRes="@raw/call"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:clickable="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/alert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Icono Alert -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/alert"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:lottie_rawRes="@raw/alert"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:clickable="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SCROLL CONTAINER -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tituloEmergencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Números de Emergencia"
                android:textAppearance="?attr/textAppearanceHeadlineLarge"
                android:textStyle="bold"
                android:fontFamily="@font/titulos"
                android:layout_marginBottom="16dp"/>

            <!-- Card 1: Bogotá -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBogota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Línea 106 Bogotá"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/titulos"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apoyo emocional 24/7 para residentes en Bogotá."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/normal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 601 106"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@android:color/holo_blue_dark"
                        android:fontFamily="@font/titulos"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Nacional -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNacional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Línea Nacional Salud Mental"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/titulos"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Línea gratuita del Ministerio de Salud."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 01 8000 42 47 42"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@android:color/holo_blue_dark"
                        android:fontFamily="@font/titulos"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Universidad Javeriana -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardJaveriana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bienestar Psicológico Javeriana"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/titulos"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientación psicológica para estudiantes Javerianos."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 601 320 83 20 Ext. 2215 – 2235 – 2275"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@android:color/holo_blue_dark"
                        android:fontFamily="@font/titulos"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Aviso Legal -->
            <TextView
                android:id="@+id/textoImportante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Zephiro no tiene ninguna relación con estas organizaciones. Esta información se proporciona únicamente con fines informativos."
                android:padding="12dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@android:color/black"
                android:fontFamily="@font/titulos"/>
        </LinearLayout>

    </ScrollView>

    <!-- MENÚ INFERIOR -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
