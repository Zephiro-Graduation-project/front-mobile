<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Esto es por si se decide dejar el nombre arriba a la izquierda en vez del logo -->
    <!--<TextView
        android:id="@+id/logoHome"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:textSize="20sp"
        android:text="@string/nombreApp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>-->

    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/logozephiro"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/nombreApp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- esto es para el logo de cerrar la sesión -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:lottie_rawRes="@raw/logout"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/namePersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensajePersona"
        app:layout_constraintTop_toBottomOf="@id/lottiHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:textSize="18sp"/>

    <!-- esto es para el logo de cerrar la sesión -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiHome"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:lottie_rawRes="@raw/tiger"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/logoHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- menu de navegación, solo es pegar lo de abajo para q funcione en todas las pantallas -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
