<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <!-- Fondo que empieza debajo del header -->
    <ImageView
        android:id="@+id/bgContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_microsurveys"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/nombreApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Header: logo -->
    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/logozephiro"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header: nombre app -->
    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombreApp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header: botón logout -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/exit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:lottie_rawRes="@raw/logout"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header: botón logout -->
    <LinearLayout
        android:id="@+id/backSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/nombreApp"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:lottie_rawRes="@raw/back_button"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tituloEncuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:textSize="20sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="@string/tituloEncuestaCorta"/>

            <include layout="@layout/item_card_estres"/>

            <include layout="@layout/item_card_ansiedad"/>

            <include layout="@layout/item_card_sueno"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="@string/tituloEncuestaCortaPm"/>

            <include layout="@layout/item_card_estres"/>

            <include layout="@layout/item_card_ansiedad"/>

            <include layout="@layout/item_card_alimentacion"/>

            <include layout="@layout/item_card_ejercicio"/>

            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/botonEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
